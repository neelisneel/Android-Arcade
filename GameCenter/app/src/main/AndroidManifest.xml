<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall2018.csc2017.GameCenter.GameCenter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".lobby.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lobby.activities.GameSelectActivity" />
        <activity android:name=".slidingtiles.activities.SlidingTilesMenuActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".lobby.activities.ScoreboardActivity" />
        <activity android:name=".slidingtiles.activities.SlidingTilesGameActivity" />
        <activity android:name=".snake.activities.SnakeGameActivity" />
        <activity android:name=".snake.activities.SnakeMenuActivity" />
        <activity android:name=".blocks.activities.BlocksMenuActivity" />
        <activity android:name=".blocks.activities.BlocksGameActivity" />
    </application>

</manifest>